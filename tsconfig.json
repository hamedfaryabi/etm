{
  "include": ["./src/**/*", "./types"],
  "exclude": ["./dist"],
  "compilerOptions": {
    "composite": true,
    "target": "es2016",
    "lib": ["ESNext"],
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@routes/*": ["src/routes/*"],
      "@models/*": ["src/app/models/*"],
      "@helpers/*": ["src/helpers/*"]
    },
    "typeRoots": ["node_modules/@types", "types"],
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
